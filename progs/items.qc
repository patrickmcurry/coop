/*
===============
DropBackpack
===============
*/
void() DropBackpack =
{
	local entity	item;
	local float		gun_count; // PMC

	// PMC -- drop a pack of empty guns with no ammo is allowed in coop
	if (!coop)
	{
		if (!(self.ammo_shells + self.ammo_nails + self.ammo_rockets + self.ammo_cells))
			return;	// nothing in it
	}
	// end PMC

	item = spawn();
	item.origin = self.origin - '0 0 24';

	// PMC -- make pack hold ALL guns held by the player...
	if (!coop)
	{
		// original quake pack code...
		item.items = self.weapon;
		if (item.items == IT_AXE)
			item.netname = "Axe";
		else if (item.items == IT_SHOTGUN)
			item.netname = "Shotgun";
		else if (item.items == IT_SUPER_SHOTGUN)
			item.netname = "Double-barrelled Shotgun";
		else if (item.items == IT_NAILGUN)
			item.netname = "Nailgun";
		else if (item.items == IT_SUPER_NAILGUN)
			item.netname = "Super Nailgun";
		else if (item.items == IT_GRENADE_LAUNCHER)
			item.netname = "Grenade Launcher";
		else if (item.items == IT_ROCKET_LAUNCHER)
			item.netname = "Rocket Launcher";
		else if (item.items == IT_LIGHTNING)
			item.netname = "Thunderbolt";
		else
			item.netname = "";
	}
	else
	{
		// put all guns in the pack...
		gun_count = 0;
		if (self.items & IT_NAILGUN)
		{
			item.items = item.items | IT_NAILGUN;
			gun_count = gun_count + 1;
		}
		if (self.items & IT_SUPER_NAILGUN)
		{
			item.items = item.items | IT_SUPER_NAILGUN;
			gun_count = gun_count + 1;
		}
		if (self.items & IT_SUPER_SHOTGUN)
		{
			item.items = item.items | IT_SUPER_SHOTGUN;
			gun_count = gun_count + 1;
		}
		if (self.items & IT_ROCKET_LAUNCHER)
		{
			item.items = item.items | IT_ROCKET_LAUNCHER;
			gun_count = gun_count + 1;
		}
		if (self.items & IT_GRENADE_LAUNCHER)
		{
			item.items = item.items | IT_GRENADE_LAUNCHER;
			gun_count = gun_count + 1;
		}
		if (self.items & IT_LIGHTNING)
		{
			item.items = item.items | IT_LIGHTNING;
			gun_count = gun_count + 1;
		}

		// give it a generic name
		if (gun_count == 6)
			item.netname = "Full Pack";
		else if (gun_count > 4)
			item.netname = "Loaded Backpack";			
		else if (gun_count > 2)
			item.netname = "Bulky Backpack";			
		else
			item.netname = "Backpack";

		// let us know who owned it!
		item.owner = self;

	}
	// end PMC

	item.ammo_shells = self.ammo_shells;
	item.ammo_nails = self.ammo_nails;
	item.ammo_rockets = self.ammo_rockets;
	item.ammo_cells = self.ammo_cells;

	item.velocity_z = 300;
	item.velocity_x = -100 + (random() * 200);
	item.velocity_y = -100 + (random() * 200);
	
	item.flags = FL_ITEM;
	item.solid = SOLID_TRIGGER;
	item.movetype = MOVETYPE_TOSS;
	setmodel (item, "progs/backpack.mdl");
	setsize (item, '-16 -16 0', '16 16 56');
	item.touch = BackpackTouch;

	item.nextthink = time + 60; // PMC -- was 120
	// PMC -- if no guns, remove after this period...
	if (gun_count == 0)
		item.think = SUB_Remove;
	else
		item.think = backpack_restore;
};

