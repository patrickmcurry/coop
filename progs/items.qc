		else if (world.worldtype == 1)
		{
			setmodel (item2, "progs/m_g_key.mdl");
			item2.netname = "gold runekey";
			item2.noise = "misc/runekey.wav";
		}
		else if (world.worldtype == 2)
		{
			setmodel (item2, "progs/b_g_key.mdl");
			item2.netname = "gold keycard";
			item2.noise = "misc/basekey.wav";
		}

		item2.touch = key_touch;
		item2.items = IT_KEY2;
		setsize (item2, '-16 -16 -24', '16 16 32');

		item2.flags = FL_ITEM;
		item2.solid = SOLID_TRIGGER;
		item2.movetype = MOVETYPE_TOSS;

		// PMC make key respawn at origin after X time	
		item2.nextthink = time + 30;
		item2.think = key2_restore;

		// print the message...
		bprint (self.netname);
		bprint (" dropped the gold key\n");
	}

};

